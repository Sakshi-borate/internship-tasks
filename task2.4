
def fibonacci_loop(n):
    sequence = []
    a, b = 0, 1
    for _ in range(n):
        sequence.append(a)
        a, b = b, a + b
    return sequence

def fibonacci_recursive_term(i):
    if i == 0:
        return 0
    elif i == 1:
        return 1
    else:
        return fibonacci_recursive_term(i - 1) + fibonacci_recursive_term(i - 2)

def fibonacci_recursive(n):
    return [fibonacci_recursive_term(i) for i in range(n)]

try:
    n = int(input("Enter the number of Fibonacci terms to generate: "))
    if n < 0:
        print("Please enter a non-negative number.")
    else:
        print("\nFibonacci sequence using loop:")
        print(fibonacci_loop(n))

        print("\nFibonacci sequence using recursion:")
        print(fibonacci_recursive(n))
except ValueError:
    print("Invalid input! Please enter an integer.")

